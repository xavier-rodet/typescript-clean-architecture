{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/4-frameworks/interfaces/api/swagger/controllers/*.ts"
  ],
  "spec": {
    "outputDirectory": "dist",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "dist",
    "iocModule": "src/di/interfaces/api/swagger"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/core/app/*"],
      "@domains/*": ["./src/core/domains/*"],
      "@di/*": ["./src/di/*"],
      "@ts-extension/*": ["./src/ts-extension/*"]
    }
  },
  "ignore": ["**/node_modules/@types/**"]
}
