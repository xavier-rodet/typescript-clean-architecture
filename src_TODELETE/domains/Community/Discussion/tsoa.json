{
  "entryFile": "infra/bootstrap/api.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["driving-adapters/api/controllers/*-controller.ts"],
  "spec": {
    "outputDirectory": "dist",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "dist",
    "iocModule": "di/infra/swagger"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@domains/*": ["./src/domains/*"],
      "@ts-extension/*": ["./src/ts-extension/*"]
    }
  },
  "ignore": ["**/node_modules/@types/**"]
}
